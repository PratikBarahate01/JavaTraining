    	<!-- Setter Injection
    	<property name="id" value="101"></property>
    	<property name="name" value="Rakesh"></property>
    	<property name="location" value="Bangalore"></property>
    	-->
    	
    	<constructor-arg index="0" value="101"></constructor-arg>
    	<constructor-arg index="1" value="Rakesh"></constructor-arg>
    	<constructor-arg index="2" value="Bangalore"></constructor-arg>
    </bean>
    
    

