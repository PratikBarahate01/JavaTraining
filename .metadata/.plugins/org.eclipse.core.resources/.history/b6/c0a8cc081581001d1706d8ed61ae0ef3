package EmployeeCal;

import java.util.ArrayList;
import java.util.HashSet;
import java.util.List;
import java.util.TreeSet;

public class Main {
	public static void main(String[] args) {

		List<Employee> allEmployees = EmployeeDao.getAllEmployees();

		List<Employee> sortedList = new ArrayList<>();

		HashSet<Employee> set = new HashSet<>();

		System.out.println(allEmployees.size());
		for (int i = 0; i < allEmployees.size(); i++) {

			double salary = allEmployees.get(i).getSalary();

			for (int j = 0; j < allEmployees.size(); j++) {
				double nextSalary = allEmployees.get(j).getSalary();
				if (salary == nextSalary) {
					double totalSal = salary + nextSalary;
					allEmployees.remove(j);
					// System.out.println(totalSal);
					Employee employee = allEmployees.get(i);
					employee.setSalary(totalSal);
					sortedList.add(employee);
				}
			}
		}

		System.out.println(sortedList);
	}

	// System.out.println(allEmployees);

	// allEmployees.stream().map(Employee::getSalary).distinct().re

}
